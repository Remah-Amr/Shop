<section class="pagination">
                {{!-- these condition become step by step by trying :) --}}
               {{#ifCond currentPage '!=' 1}}
                {{#ifCond previousPage '!=' 1}}
                <a href="?page=1">1</a>
                {{/ifCond}}
                {{/ifCond}}
                {{#if hasPrevious}}
                <a href="?page={{previousPage}}">{{previousPage}}</a>
                {{/if}}
                <a href="?page={{currentPage}}" class="active">{{currentPage}}</a>
                {{#if hasNext}}
                {{#ifCond nextPage '!=' lastPage}}
                <a href="?page={{nextPage}}">{{nextPage}}</a>                
                {{/ifCond}}
                {{/if}}
                {{#ifCond lastPage '!=' currentPage}}
                <a href="?page={{lastPage}}">{{lastPage}}</a>
                {{/ifCond}}                
 </section>
 {{!-- this is important thing which path in href is appended to current url path not generate new one which mean if i in /products and i want page 2
 will be /products?page=2  --}}