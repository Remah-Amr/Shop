 <main>
        {{#if prods}} <!--Accept true of false only-->
            <div class="grid">
                {{#each prods}}
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title">{{this.title}}</h1>
                        </header>
                        <div class="card__image">
                            <img src="/{{imageUrl}}" alt="{{title}}">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">${{price}}</h2>
                            <p class="product__description">{{description}}</p>
                            {{!-- <p class="product__description"><a href="{{description}}">tutourial</a></p> --}}
                        </div>
                        <div class="card__actions">
                            <a href="/products/{{_id}}" class="btn">Details</a>
                            {{#if ../user}}
                            <form action="/cart" method="POST">
                              <button class="btn">Add to Cart</button>
                              <input type="hidden" value='{{../csrfToken}}' name='_csrf'>
                              <input type="hidden" name="productId" value="{{_id}}">
                            </form>
                            {{/if}}
                        </div>
                    </article>
                {{/each}}
            </div> 
            {{> _pagination}}
        {{else}}
            <h1>No Products Found!</h1>
        {{/if}}
</main>
